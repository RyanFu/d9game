<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="circle_progress" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/ic_progress</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="topbar">
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@drawable/section_bg</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/topbar_height_withshadow</item>
    </style>

    <style name="topbar_title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="camera_dialog_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="camera_dialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="MyTheme">
    <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
</style>    
<style name="AnimationActivity" parent="@android:style/Animation.Activity"  > 
    <item name="@android:activityOpenEnterAnimation">@anim/left_anim</item> 
        <item name="@android:activityOpenExitAnimation">@anim/left_anim</item>
        <item name="@android:activityCloseEnterAnimation">@anim/right_anim</item>
        <item name="@android:activityCloseExitAnimation">@anim/right_anim</item>
</style> 
</resources>