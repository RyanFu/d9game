<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar2"
    android:layout_width="fill_parent"
    android:layout_height="82sp" >
<TextView
    android:id="@+id/topnum_applist_item_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1"
      android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
    />
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="18dip"
        android:layout_marginLeft="23dip"
        android:layout_marginTop="18dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tempicon" />
    <RelativeLayout
        android:id="@+id/frame_layout2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="12sp" >

        <me.key.appmarket.widgets.ProgressView
            android:id="@+id/progress_view2"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:focusable="false" 
            />

        <TextView
            android:id="@+id/tv_down2"
          android:layout_width="50dip"
             android:layout_height="27dip"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:background="@drawable/mybutton_shape"
             android:clickable="true"
             android:focusable="false"
             android:gravity="center"
             android:text="下载"
             android:textColor="#0066FF"
             android:textSize="13sp"  />
    </RelativeLayout>

    <ImageView
        android:id="@+id/divider2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/frame_layout2"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tab_divider" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/divider2"
        android:layout_toRightOf="@id/icon2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/app_name2"
            style="@style/topbar_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7sp"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/appsize2"
            style="@style/topbar_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:gravity="center_vertical"
            android:text="2.14MB"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>