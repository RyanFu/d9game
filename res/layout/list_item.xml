<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar"
    android:layout_width="fill_parent"
    android:layout_height="75dip"
    android:background="@drawable/bg" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dip"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tempicon" />

    <!--
         <RelativeLayout
        android:id="@+id/frame_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="12sp" >
    -->

    <me.key.appmarket.widgets.ProgressView
        android:id="@+id/progress_view_local"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <!--
             <TextView
            android:id="@+id/install"
             android:layout_width="60dip"
             android:layout_height="35dip"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:background="@drawable/install_btn"
             android:clickable="true"
             android:focusable="false"
             android:gravity="center"
             android:textColor="#0066FF"
             android:textSize="13sp" />
    -->

    <FrameLayout
        android:id="@+id/state_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/iv_oprate_state"
            android:layout_width="65dip"
            android:layout_height="28dip"
            android:layout_marginRight="10dip"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/install_btn"
            android:textColor="#0066FF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/install"
            android:layout_width="50dip"
            android:layout_height="28dip"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="打开"
            android:textColor="#ffffff" />
    </FrameLayout>
    <!-- </RelativeLayout> -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="18dip"
        android:layout_toLeftOf="@id/divider"
        android:layout_toRightOf="@id/icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/info"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            style="@style/topbar_title"
            android:ellipsize="end"
            android:layout_marginBottom="7dip" />
        <!--  -->

        <TextView
            android:id="@+id/appsize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="2.14MB"
            android:textColor="@color/dark_gray"
            android:textSize="12sp" />
        <!-- style="@style/topbar_title" -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/diver_vertical" >
    </LinearLayout>

</RelativeLayout>