<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar2"
    android:layout_width="fill_parent"
    android:layout_height="82sp"
     android:background="@drawable/slidingmenu_right_background"
    >
    <ImageView
        android:id="@+id/icon2"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="8dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tempicon" />
    <RelativeLayout
        android:id="@+id/frame_layout2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="12sp" >


    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/divider2"
        android:layout_toRightOf="@id/icon2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/app_name2"
            style="@style/topbar_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7sp"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/appsize2"
            style="@style/topbar_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:gravity="center_vertical"
            android:text="2.14MB"
            android:textColor="@color/dark_gray"
            android:textSize="9sp" />
    </LinearLayout>

</RelativeLayout>