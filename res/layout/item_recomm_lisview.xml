<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     >
<FrameLayout
    android:layout_width="fill_parent" 
     android:layout_height="150dip"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        >
    <ImageView
        android:layout_marginTop="10dip"
        android:id="@+id/recomm_bigiv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/test" />

 <LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="50dip" 
     android:layout_alignParentBottom="true"
     android:background="@color/myblack"
     >
     <LinearLayout
         android:layout_width="0dip"
         android:layout_height="fill_parent"
         android:layout_weight="9"
         android:orientation="vertical" 
           android:layout_gravity="center"
         >
         <TextView
             android:id="@+id/recomm_name"
             android:layout_width="wrap_content"
             android:layout_height="20dip"
             android:gravity="center"
               android:layout_gravity="center_vertical"
             android:text="test" 
             android:textColor="@color/white"
             android:textSize="13sp"
             
             />

         <TextView
              android:id="@+id/recomm_descr"
             android:layout_width="wrap_content"
             android:layout_height="20dip"
             android:gravity="center"
             android:text="test"
               android:textColor="@color/white"
             android:textSize="13sp"
             android:singleLine="true"
              />

     </LinearLayout>

     <RelativeLayout
         android:id="@+id/frame_layout"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="10dip"
         android:layout_marginRight="12dip" >

         <TextView
             android:id="@+id/recomm_tv_down"
             android:layout_width="50dip"
             android:layout_height="27dip"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:background="@drawable/mybutton_shape"
             android:clickable="true"
             android:focusable="false"
             android:gravity="center"
             android:text="下载"
             android:textColor="#0066FF"
             android:textSize="13sp" />

         <me.key.appmarket.widgets.ProgressView
             android:id="@+id/recomm_progress_view"
             android:layout_width="30dip"
             android:layout_height="30dip"
             android:layout_alignBottom="@+id/recomm_tv_down"
             android:layout_centerHorizontal="true"
             android:focusable="false" />

     </RelativeLayout>

 </LinearLayout>
</RelativeLayout>
</FrameLayout>

</LinearLayout>